<h1><%= @patient.id ? "Update Patient" : "Add Patient" %></h1>

<%= form_with(model: @patient, local: true, class: 'ui form') do |f|%>
  <div class = "field">
    <%= f.label :first_name %>
    <%= f.text_field :first_name, required: true, placeholder: "First Name" %>

    <%= f.label :last_name %>
    <%= f.text_field :last_name, required: true, placeholder: "Last Name" %>

    <%= f.label :age %>
    <%= f.text_field :age, required: true, placeholder: "age" %>

    <%= f.label :gender %>
    <%= f.select :gender, ['Male', 'Female']%>
  </div>
  <%= f.submit nil, class: "ui blue button inverted"%>
<% end%>    